<?xml version="1.0"?>
<info>
	<id>text_templates</id>
	<name>Text templates</name>
	<summary>Quickly get text templates in Nextcloud</summary>
	<description><![CDATA[This app adds a smart picker provider to quickly access text templates when using Text, Collectives, Talk, Mail
or any place where the smart picker is integrated.]]></description>
	<version>1.0.5</version>
	<licence>agpl</licence>
	<author>Julien Veyssier</author>
	<namespace>TextTemplates</namespace>
	<documentation>
		<developer>https://github.com/julien-nc/text_templates</developer>
	</documentation>
	<category>integration</category>
	<website>https://github.com/julien-nc/text_templates</website>
	<bugs>https://github.com/julien-nc/text_templates/issues</bugs>
	<screenshot>https://github.com/julien-nc/text_templates/raw/main/img/screenshot1.jpg</screenshot>
	<screenshot>https://github.com/julien-nc/text_templates/raw/main/img/screenshot2.jpg</screenshot>
	<screenshot>https://github.com/julien-nc/text_templates/raw/main/img/screenshot3.jpg</screenshot>
	<screenshot>https://github.com/julien-nc/text_templates/raw/main/img/screenshot4.jpg</screenshot>
	<dependencies>
		<nextcloud min-version="26" max-version="29"/>
	</dependencies>
	<settings>
		<admin>OCA\TextTemplates\Settings\Admin</admin>
		<personal>OCA\TextTemplates\Settings\Personal</personal>
	</settings>
</info>
